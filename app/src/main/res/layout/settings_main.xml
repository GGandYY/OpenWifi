<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/fl_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:id="@+id/fl_background2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/total_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/settings_margin_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_activity_image_title_bottom"
            android:layout_marginTop="@dimen/settings_activity_vertical_margin"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:src="@drawable/settings_freeme_me" />
        <!-- ====================five=========================== -->
        <LinearLayout
            android:id="@+id/five_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/settings_blow_top"
            android:layout_marginBottom="@dimen/settings_activity_button_bottom"
            android:layout_marginLeft="@dimen/settings_activity_button_left"
            android:layout_marginRight="@dimen/settings_activity_button_left"
            android:layout_alignParentBottom="true">

            <include
                android:id="@+id/settings_application"
                style="@style/setting_include"
                layout="@layout/settings_item" />

            <include
                android:id="@+id/settings_system_setting"
                style="@style/setting_include"
                layout="@layout/settings_item" />

            <include
                android:id="@+id/settings_launcher_setting"
                style="@style/setting_include"
                layout="@layout/settings_item" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/settings_activity_vertical_margin"
            android:layout_above="@id/five_total_layout"
            android:orientation="vertical">
            <!-- =============one===================== -->
            <LinearLayout
                android:id="@+id/one_total_layout"
                style="@style/setting_row">

                <include
                    android:id="@+id/settings_ariplane"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_data"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_wifi"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />
            </LinearLayout>
            <!-- ====================two=========================== -->
            <LinearLayout
                android:id="@+id/two_total_layout"
                style="@style/setting_row">

                <include
                    android:id="@+id/settings_ring"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_hotpot"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_location"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />
            </LinearLayout>
            <!-- ====================three=========================== -->
            <LinearLayout
                android:id="@+id/three_total_layout"
                style="@style/setting_row">

                <include
                    android:id="@+id/settings_rotate"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_bluetooth"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_save_power"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />
            </LinearLayout>
            <!-- ====================four=========================== -->
            <LinearLayout
                android:id="@+id/four_total_layout"
                style="@style/setting_row">

                <include
                    android:id="@+id/settings_screen_light"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_auto_light"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />

                <include
                    android:id="@+id/settings_torch"
                    style="@style/setting_include"
                    layout="@layout/settings_item" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</merge>